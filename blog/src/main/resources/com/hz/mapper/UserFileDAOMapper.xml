    <select id="findByUserId" parameterType="Integer" resultType="com.hz.blog.entity.UserFile">
        SELECT id,oldFileName,newFileName,ext,path,size,type,isImg,downcounts,uploadTime,userId FROM files WHERE userId=#{id}
    </select>

    <insert id="savaFileMessage" parameterType="com.hz.blog.entity.UserFile" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO files
        VALUES (#{id},#{oldFileName},#{newFileName},#{ext},#{path},#{size},#{type},#{isImg},#{downcounts},#{uploadTime},#{userId})
    </insert>

    <select id="findFileById" parameterType="String" resultType="com.hz.blog.entity.UserFile">
        SELECT id,oldFileName,newFileName,ext,path,size,type,isImg,downcounts,uploadTime,userId FROM files WHERE id=#{id}
    </select>

    <update id="updateFile" parameterType="com.hz.blog.entity.UserFile">
        UPDATE files SET downcounts =#{downcounts} WHERE id=#{id}
    </update>

